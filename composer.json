{
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "brain/monkey": "^2.6",
        "wp-phpunit/wp-phpunit": "^6.8",
        "yoast/phpunit-polyfills": "^2.0",
        "phpstan/phpstan": "^1.11",
        "squizlabs/php_codesniffer": "^3.10",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "php-stubs/wordpress-stubs": "^6.5"
    },
    "scripts": {
        "test:php": "vendor/bin/phpunit -c wp-svg-viewer/phpunit.xml.dist",
        "lint:phpcs": "vendor/bin/phpcs",
        "lint:phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon.dist",
        "lint": [
            "@lint:phpcs",
            "@lint:phpstan"
        ],
        "test": [
            "@test:php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
